                           -DDTRACE_LIBDIR="\"$(LIBDIR)/dtrace\"" -DDTRACE_USER_UID=$(USER_UID) \
                           -DUNPRIV_UID=$(UNPRIV_UID) -DDUMPCAP_GROUP=\"$(DUMPCAP_GROUP)\" \
                           -DUNPRIV_HOME=\"$(UNPRIV_HOME)\"
libdtrace-build_TARGET = libdtrace
libdtrace-build_DIR := $(current-dir)
